[maxscale]
threads=###threads###
log_info=1

###server###

[MySQL-Monitor]
type=monitor
module=mysqlmon
servers=###server_line###
user=maxskysql
password=skysql
monitor_interval=1000

[RW-Split-Router]
type=service
router=readwritesplit
servers=###server_line###
user=maxskysql
password=skysql

[Read-Connection-Router-Slave]
type=service
router=readconnroute
router_options=slave
servers=###server_line###
user=maxskysql
password=skysql
