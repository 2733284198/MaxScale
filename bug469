#!/bin/bash

server1_before=`ssh -i $Maxscale_sshkey -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null root@$Maxscale_IP "$maxdir/bin/maxadmin -pskysql -uadmin -P6603 show server server1"`
echo "Before quiery"
echo $server1_before

ssh -i $Maxscale_sshkey -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null root@$Maxscale_IP "echo \"show databases;\" | mysql -h 127.0.0.1 -P 4006 -u$repl_User -p$repl_Password -c"
server1_after=`ssh -i $Maxscale_sshkey -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null root@$Maxscale_IP "$maxdir/bin/maxadmin -pskysql -uadmin -P6603 show server server1"`
echo "After quiery"
echo $server1_after

echo $server1_before | grep "Current no. of conns:		0"
if [ $? != 0 ] ; then
	exit 1 
fi

echo $server1_after | grep "Current no. of conns:              0"
if [ $? != 0 ] ; then
        exit 1 
fi


echo $server1_before | grep "Number of connections:		0"
if [ $? != 0 ] ; then
        exit 1 
fi


echo $server1_after | grep "Number of connections:		1"
if [ $? != 0 ] ; then
        exit 1 
fi


